@model Bank

<form method="post" asp-action="Edit_I">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">EditI Your Bank Details</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label >Founds</label>
            <input asp-for="_Founds" class="form-control" />
            <span asp-validation-for="_Founds" class="text-danger"></span>

        </div> 
        <div class="mb-3">
            <label>Pasword</label>
            <input type="password" asp-for="_Password" class="form-control" id="password" />
            <input type="checkbox" onchange="document.getElementById('password').type = this.checked ? 'text' : 'password'" />Show Password
            <span asp-validation-for="_Password" class="text-danger"></span>


        </div>
        <button type="submit" class="btn btn-primary" style="width:150px; height:60px">Edit Bank</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to home page
        </a>
    </div>
</form>
<br />
<br />

