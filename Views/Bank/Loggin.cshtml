@model Bank


<form method="post" >
    <div class="border p-3 mt-4">
        <div class="row pb-4">
            <h2 class="text-primary">Log-in into the Bank account</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class=" mb-2">
            <label asp-for="_Password">Password</label>
            <input asp-for="_Password" class="form-control" type="password" id="password"/>
            <input type="checkbox" onchange="document.getElementById('password').type = this.checked ? 'text' : 'password'" />Show Password
            <span asp-validation-for="_Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px; height:60px">Logg-in</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to home page
        </a>
    </div>
</form>
